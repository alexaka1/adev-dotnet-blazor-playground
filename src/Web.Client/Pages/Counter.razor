@page "/counter"
@rendermode InteractiveAuto

<PageTitle>Counter</PageTitle>

<h1 class="text-2xl font-bold mb-4">Counter @RendererInfo.Name</h1>

<p role="status" class="text-lg text-gray-700 mb-4">Current count: @currentCount</p>

<button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" @onclick="IncrementCount">
  Click me
</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

}
